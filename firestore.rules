rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção 'users'
    match /users/{userId} {
      // Permite que um usuário leia e escreva APENAS seu próprio documento
      allow read, write: if request.auth.uid == userId;
    }

    match /leads/{leadId} {
      // Qualquer pessoa pode criar um lead (captura de visitantes anônimos)
      allow create: if true;
      // Apenas o dono ou usuários autenticados podem ler/editar leads existentes
      allow read, update, delete: if request.auth != null && 
        (request.auth.uid == leadId || request.auth.uid == resource.data.ownerId);
    }

    // Regra padrão para negar acesso a todas as outras coleções não explicitamente definidas
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

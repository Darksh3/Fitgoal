rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper para verificar se é admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admin pode ler/escrever dados de qualquer usuário
      allow read, write: if isAdmin();
      
      match /measurements/{measurementId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
      
      match /analyses/{analysisId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
      
      match /plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
      
      match /diets/{dietId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
      
      match /workouts/{workoutId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
    }

    match /progressPhotos/{photoId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Admin pode ler/escrever/deletar qualquer foto
      allow read, write, delete: if isAdmin();
    }

    match /leads/{leadId} {
      allow read, write: if request.auth != null && request.auth.uid == leadId;
      allow read, write, delete: if isAdmin();
      allow list: if request.auth != null && request.auth.uid == leadId;
      allow list: if isAdmin();
    }

    match /payments/{paymentId} {
      // Cliente pode LER seu próprio pagamento
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Cliente NÃO pode ESCREVER (apenas servidor via Admin SDK)
      allow write: if false;
      
      // Admin pode ler e escrever qualquer pagamento
      allow read, write: if isAdmin();
    }

    // Coleção global de usuários (para admin listar)
    match /usersCollection/{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Regra padrão para negar acesso a todas as outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

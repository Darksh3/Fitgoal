rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Permitir leitura e escrita própria
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Permitir para admin ou servidor
      allow write: if request.auth.token.admin == true;
      
      match /measurements/{measurementId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /payments/{paymentId} {
      // Permitir criação/atualização via webhook (admin)
      allow read, write: if request.auth.token.admin == true;
      // Permitir leitura própria
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /progressPhotos/{photoId} {
      // Permitir leitura de suas próprias fotos (corrigida para suportar queries)
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Permitir listar suas próprias fotos via query
      allow list: if request.auth != null;
      
      // Permitir criar suas próprias fotos
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Permitir atualizar suas próprias fotos
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Permitir deletar suas próprias fotos
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /leads/{leadId} {
      allow read, write: if request.auth.uid == leadId || (request.auth.token.admin == true);
    }

    // Regra padrão para negar acesso a todas as outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
